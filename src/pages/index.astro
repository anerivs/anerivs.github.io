---
import BaseHead from "../components/layout/BaseHead.astro";
import ExpandedContact from "../components/layout/ExpandedContact.astro";
import Header from "../components/layout/Header.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead />
  </head>
  <body class="mx-gutter overflow-x-hidden bg-bg-black">

    <Header />
    <main
      class="flex gap-12 xl:gap-24 flex-wrap md:flex-nowrap justify-center md:justify-start mb-20"
    >

    <!--intro block -->
      <aside
        class="whitespace-nowrap relative hidden lg:block green-fade px-4 py-6 rounded-xl text-b-minato"
        transition:name="contact"
      >
        <p class="tabby1">Computer Science</p>
        <p class="tabby2">Physics</p>
        <p class="mb-[4.5rem]">Japanese</p>

        <h1 class="text-4xl text-b-yellow mb-[4.5rem] leading-none">
            <!--name blocks on home page -->
        　<span class="block">Aneri Shah</span>
          <span class="block font-medium mb-2"> アネリ・シャー</span>
        </h1>

        <div class="intro-noise rounded-md"></div> <!-- Noise overlay specific to the intro block -->
      </aside>

      <!--main info -->
      <section class="w-[32ch] text-b-graytext">
        <p class="mb-16">
          Hi! I'm <span class="text-b-yellow">Aneri Shah</span>, a curious and aspiring software developer studying at NYU. I love poking into new fields and finding patterns and connections between them.
        </p>
        <ul class="flex flex-col gap-5">
          <li
            class="flex items-center justify-between gap-2 pb-3 relative after:absolute after:h-[1px] after:bg-b-willow after:w-[calc(100%+3rem)] after:left-0 after:-translate-x-6 after:bottom-0"
          > 
            <a href="/projects">
              Check out my
              <span class="text-b-yellow">creations</span>
            </a>
            <img src="/icons/externalArrow.svg" alt="" class="h-5 w-5" />
          </li>
          <li
            class="flex items-center justify-between gap-2 pb-3 relative after:absolute after:h-[1px] after:bg-b-willow after:w-[calc(100%+3rem)] after:left-0 after:-translate-x-6 after:bottom-0"
          >
            <a href="/blog">
              View my
              <span class="text-b-yellow">projects</span>
            </a>
            <img src="/icons/externalArrow.svg" alt="" class="h-5 w-5" />
          </li>
          <li
            class="flex items-center justify-between gap-2 pb-3 relative after:absolute after:h-[1px] after:bg-b-willow after:w-[calc(100%+3rem)] after:left-0 after:-translate-x-6 after:bottom-0"
          >
            <a href="/about">
              Learn more
              <span class="text-b-yellow">about me</span>
            </a>
            <img src="/icons/externalArrow.svg" alt="" class="h-5 w-5" />
          </li>
          <!-- <li
            class="flex items-center justify-between gap-2 pb-3 relative after:absolute after:h-[1px] after:bg-b-willow after:w-[calc(100%+3rem)] after:left-0 after:-translate-x-6 after:bottom-0"
          >
            <a href="/uses">
              Check out my
              <span class="text-b-yellow">creations</span>!
            </a>
            <img src="/icons/externalArrow.svg" alt="" class="h-5 w-5" />
          </li> -->
        </ul>
      </section>
      <ExpandedContact />
    </main>
  </body>
</html>
