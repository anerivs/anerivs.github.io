---
import Island from "../components/layout/Islands.astro";
import BaseHead from "../components/layout/BaseHead.astro";
import Header from "../components/layout/Header.astro";
import { projects } from "../data/projects/projects.json";
import FibbonaciHeading from "../components/layout/FibbonaciHeading.astro";

const firstColumn = projects.filter((_, index) => index % 3 === 0);
const secondColumn = projects.filter((_, index) => index % 3 === 1);
const thirdColumn = projects.filter((_, index) => index % 3 === 2);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead
      title="Visuals"
      description="Here's some of Aneri's visual creations!"
    />
  </head>
  <body class="mx-gutter overflow-x-hidden bg-bg-black">
    <Header />
    <main class="flex flex-wrap md:flex-nowrap justify-center md:justify-start mb-20">
      <section class="w-full md:w-1/3 p-4">
        <FibbonaciHeading title="Visuals" desc="Some creations made in Aneri's free time. Photos shot on iPhone 15 and Nikon D5000."/>
      </section>
      <section class="w-full md:w-2/3 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="grid gap-4">
          {firstColumn.map(project => (
            <Island {...project} />
          ))}
        </div>
        <div class="grid gap-4">
          {secondColumn.map(project => (
            <Island {...project} />
          ))}
        </div>
        <div class="grid gap-4">
          {thirdColumn.map(project => (
            <Island {...project} />
          ))}
        </div>
      </section>
    </main>
  </body>
</html>
